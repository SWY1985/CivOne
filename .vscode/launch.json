// These are the settings for editing CivOne in Visual Studio Code.
// Please do not change them!
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Game",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceRoot}/runtime/sdl/bin/Debug/netcoreapp2.0/CivOne.SDL.dll",
			"args": [],
			"cwd": "${workspaceRoot}",
			"stopAtEntry": false,
			"console": "internalConsole",
			"internalConsoleOptions": "openOnFirstSessionStart"
		},
		{
			"name": "Launch Setup",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceRoot}/runtime/sdl/bin/Debug/netcoreapp2.0/CivOne.SDL.dll",
			"args": ["setup"],
			"cwd": "${workspaceRoot}",
			"stopAtEntry": false,
			"console": "internalConsole",
			"internalConsoleOptions": "openOnFirstSessionStart"
		},
		{
			"name": "Launch Demo",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceRoot}/runtime/sdl/bin/Debug/netcoreapp2.0/CivOne.SDL.dll",
			"args": ["demo"],
			"cwd": "${workspaceRoot}",
			"stopAtEntry": false,
			"console": "internalConsole",
			"internalConsoleOptions": "openOnFirstSessionStart"
		},
		{
			"name": "Launch Free",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceRoot}/runtime/sdl/bin/Debug/netcoreapp2.0/CivOne.SDL.dll",
			"args": ["free"],
			"cwd": "${workspaceRoot}",
			"stopAtEntry": false,
			"console": "internalConsole",
			"internalConsoleOptions": "openOnFirstSessionStart"
		},
		{
			"name": "Launch Win32",
			"type": "mono",
			"request": "launch",
			"preLaunchTask": "build-win32",
			"program": "${workspaceRoot}/runtime/win32/bin/CivOne.Win32.exe",
			"args": [],
			"cwd": "${workspaceRoot}",
			"console": "internalConsole",
			"internalConsoleOptions": "openOnFirstSessionStart"
		}
	]
}