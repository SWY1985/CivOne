{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Game",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceRoot}/runtime/sdl/bin/Debug/netcoreapp3.1/CivOne.SDL.dll",
			"args": [],
