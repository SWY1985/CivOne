// These are the settings for editing CivOne in Visual Studio Code.
// Please do not change them!
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "dotnet",
			"windows": {
				"args": [
					"build",
					"${workspaceRoot}/runtime/sdl/CivOne.SDL.csproj"
				]
			},
			"linux": {
				"args": [
					"build",
					"${workspaceRoot}/runtime/sdl/CivOne.SDL.csproj"
				]
			},
			"osx": {
				"args": [
					"build",
					"${workspaceRoot}/runtime/sdl/CivOne.SDL.csproj",
					"-c",
					"DebugMacOS"
				]
			},
			"presentation": {
				"focus": true,
				"panel": "dedicated"
			}
		},
		{
			"label": "test",
			"type": "shell",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"command": "dotnet",
			"args": [
				"test",
				"${workspaceRoot}/xunit/CivOne.UnitTests.csproj"
			],
			"presentation": {
				"focus": true,
				"panel": "dedicated"
			}
		},
		{
			"label": "build-api",
			"type": "shell",
			"group": "build",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceRoot}/api/CivOne.API.csproj"
			],
			"presentation": {
				"focus": true,
				"panel": "dedicated"
			}
		}
	]
}